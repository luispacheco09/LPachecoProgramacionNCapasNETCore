@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@*@model ML.Usuario*@
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>Usuario</h2>

        </div>
        <div class="col-md-6 col-sm-12">
            <h2>Detalle</h2>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione una usuario para editarlo o + para agregar...</h5>
            <hr />
        </div>
    </div>

    <div style="float:right;">
        @Html.ActionLink("+", "Form", "UsuarioController", htmlAttributes: new { @class = "btn btn-success" })
    </div>

    @if (Model != null)
    {
        <div class="row">
            <table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
                <thead>
                    <tr class="table-secondary">
                        <td>Editar</td>
                        <td style="display :none;">id</td>
                        <td>Nombre de usuario</td>
                        <td>Email</td>
                        <td>Telefono</td>
                        <td>Eliminar</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon" href="@Url.Action("Form", "Usuario", new { IdUsuario = user.Id })"><i class="bi bi-pencil-square" style="color: ivory"></i></a></td>
                            <td style="display :none;">@user.Id </td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            @*<td class="text-success">@user.UsuarioRol.RolId)</td>*@
                            <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdUsuario = user.Id})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>
