@model ML.Venta;
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Ventas.Count > 0)
{
    <section class="h-100" style="background-color: #eee;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-10">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="fw-normal mb-0 text-black">Historial de compras</h3>
                       
                    </div>
                    @foreach (ML.Venta venta in Model.Ventas)
                    {
                        <div class="card rounded-3 mb-4">
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img1.webp"
                                             class="img-fluid rounded-3" alt="Cotton T-shirt">
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                        <p class="lead fw-normal mb-2">Numero de venta: @venta.IdVenta</p>
                                        <p><span class="text-muted">Total: </span>$@venta.Total</p> 
                                        <p><span class="text-muted">Fecha: </span>@venta.Fecha</p>
                                    </div>
                                  
                                   @*  <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                        <h5 class="mb-0">Pagado</h5>
                                        <h5 class="mb-0">$@venta.Total</h5>
                                    </div> *@
                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">

                                        @* <button type="button" class="btn btn-outline-primary">Ver Detalles</button> *@
                                        <a class="btn btn-outline-primary" href="@Url.Action("GetProductoHistorial", "Historial", new { IdVenta = venta.IdVenta})">Ver detalles</a>

                                    </div>
                                   
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </section>
}
else
{
    <div class="alert alert-danger" role="alert">No hay un historial de compra.</div>

}

