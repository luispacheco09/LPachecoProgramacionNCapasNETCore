@model ML.Sucursal
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Sucursal</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h5> Ingrese los datos de la sucursal</h5>
        </div>
        <hr />
    </div>

    <form asp-action="Form" asp-controller="Sucursal" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="IdSucursal" hidden></label>
                <input asp-for="IdSucursal" hidden class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>

             <div class="col-md-4">
            <label asp-for="Calle"></label>
            <input asp-for="Calle" class="form-control" />
            <span asp-validation-for="Calle" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>

            <div class="col-md-4">
            <label asp-for="NumeroInterior"></label>
                <input asp-for="NumeroInterior" class="form-control" />
                <span asp-validation-for="NumeroInterior" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="NumeroExterior"></label>
                <input asp-for="NumeroExterior" class="form-control" />
                <span asp-validation-for="NumeroExterior" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="CP"></label>
                <input asp-for="CP" class="form-control" />
                <span asp-validation-for="CP" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Colonia"></label>
                <input asp-for="Colonia" class="form-control" />
                <span asp-validation-for="Colonia" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-md-4">
                <label asp-for="Municipio"></label>
                <input asp-for="Municipio" class="form-control" />
                <span asp-validation-for="Municipio" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Estado"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="PaginaWeb"></label>
                <input asp-for="PaginaWeb" class="form-control" />
                <span asp-validation-for="PaginaWeb" class="text-danger" id="lblCurpErrorMessage"></span>
            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-md-1 offset-md-5">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
            <div class="col-md-1">
                <a asp-action="GetAll" asp-controller="Sucursal" class="btn btn-danger">Cancelar</a>
            </div>
        </div>
    </form>
</div>